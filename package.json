{
  "name": "echoapp",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "lint:fast": "oxlint",
    "format:fast": "oxfmt .",
    "prepare": "husky",
    "test": "jest --watchAll",
    "buf-update": "pnpm remove @buf/echo-tracker_echo.bufbuild_es && pnpm add @buf/echo-tracker_echo.bufbuild_es:latest",
    "tamagui:generate": "tamagui generate"
  },
  "dependencies": {
    "@buf/echo-tracker_echo.bufbuild_es": "latest",
    "@bufbuild/protobuf": "^2.10.2",
    "@connectrpc/connect": "^2.1.1",
    "@connectrpc/connect-web": "^2.1.1",
    "@expo-google-fonts/outfit": "^0.4.3",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.9.0",
    "@react-navigation/elements": "^2.9.3",
    "@react-navigation/native": "^7.1.26",
    "@shopify/react-native-skia": "^2.2.12",
    "@tamagui/babel-plugin": "^1.143.1",
    "@tamagui/config": "^1.143.1",
